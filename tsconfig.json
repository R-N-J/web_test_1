{
  "compilerOptions": {
    "module": "esnext", // Keep this
    "moduleResolution": "bundler", // <--- CHANGE THIS (was "NodeNext")
    "target": "ESNext", // Or es5 "es2015", depending on browser support needed ES2022
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "webpack*.js"]
}
